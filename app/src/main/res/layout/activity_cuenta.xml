<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4C7F4">
    <ImageView
        android:id="@+id/logoUsuario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="12dp" />
    <!-- Botón X para cerrar -->
    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✕"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnCerrar"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tituloCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi Cuenta"
                android:textSize="26sp"
                android:textColor="#623690"
                android:layout_marginBottom="24dp"
                android:textStyle="bold" />

            <!-- CONTENEDOR ROSA CLARITO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#E8DBFF"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:clipToPadding="false"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:backgroundTintMode="src_in">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp"
                    android:background="#FFFFFF">
                    <TextView
                        android:id="@+id/textNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Nombre:"
                        android:textSize="18sp"
                        android:textColor="#333333" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp"
                    android:background="#FFFFFF">
                    <TextView
                        android:id="@+id/textEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Correo:"
                        android:textSize="18sp"
                        android:textColor="#333333" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp"
                    android:background="#FFFFFF">
                    <TextView
                        android:id="@+id/textTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Teléfono:"
                        android:textSize="18sp"
                        android:textColor="#333333" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp"
                    android:background="#FFFFFF">
                    <TextView
                        android:id="@+id/textDni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="DNI:"
                        android:textSize="18sp"
                        android:textColor="#333333" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp"
                    android:background="#FFFFFF">
                    <TextView
                        android:id="@+id/textGenero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Género:"
                        android:textSize="18sp"
                        android:textColor="#333333" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp"
                    android:background="#FFFFFF">
                    <TextView
                        android:id="@+id/textDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Dirección:"
                        android:textSize="18sp"
                        android:textColor="#333333" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    card_view:cardCornerRadius="12dp"
                    card_view:cardElevation="2dp"
                    android:background="#FFFFFF">
                    <TextView
                        android:id="@+id/textCiudad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Ciudad y país:"
                        android:textSize="18sp"
                        android:textColor="#333333" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
