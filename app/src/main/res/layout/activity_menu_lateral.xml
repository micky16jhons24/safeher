<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E0FF"
    android:padding="16dp">

    <!-- Botón Cerrar en esquina superior derecha -->
    <TextView
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✕"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnCerrar"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Opción: Mi Cuenta -->
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C9BCE0" />

            <!-- Opción: Historial -->
            <TextView
                android:id="@+id/opcionHistorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historial"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:paddingHorizontal="8dp"
                android:textColor="#222222" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C9BCE0" />

            <!-- Opción: Códigos de Descuento -->
            <TextView
                android:id="@+id/opcionCodigos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Códigos de Descuento"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:paddingHorizontal="8dp"
                android:textColor="#222222" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C9BCE0" />

            <!-- Opción: Soporte Técnico -->
            <TextView
                android:id="@+id/opcionAyuda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soporte Técnico"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:paddingHorizontal="8dp"
                android:textColor="#222222" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C9BCE0" />

            <!-- Opción: Seguridad -->
            <TextView
                android:id="@+id/opcionSeguridad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seguridad"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:paddingHorizontal="8dp"
                android:textColor="#222222" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C9BCE0" />

            <!-- Opción: Sobre Nosotros -->
            <TextView
                android:id="@+id/opcionSobre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sobre Nosotros"
                android:textSize="16sp"
                android:paddingVertical="14dp"
                android:paddingHorizontal="8dp"
                android:textColor="#222222" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#C9BCE0" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/opcionCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="14dp"
        android:text="Mi Cuenta"
        android:textColor="#222222"
        android:textSize="16sp" />
</RelativeLayout>
